<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <android.support.v7.widget.CardView android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        android:backgroundTint="#BAFFBC"
                                        app:cardCornerRadius="10dp" app:layout_constraintHorizontal_bias="0.0"
                                        app:layout_constraintVertical_bias="0.0" android:layout_marginTop="5dp"
                                        android:layout_marginEnd="5dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_mode_edit_black_24dp"
                    android:id="@+id/tag_row_edit_imageButton" android:background="#00000000"
                    app:layout_constraintTop_toTopOf="@+id/tag_row_editText" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/tag_row_delete_imageButton"
                    app:layout_constraintBottom_toBottomOf="@+id/tag_row_editText"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_delete_black_24dp"
                    android:id="@+id/tag_row_delete_imageButton" android:background="#00000000"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toTopOf="@+id/tag_row_editText"
                    app:layout_constraintBottom_toBottomOf="@+id/tag_row_editText"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/tag_row_editText" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Name" android:focusable="false" android:background="#00000000"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>